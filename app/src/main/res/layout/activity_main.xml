<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Travel Guide"
        android:textSize="40sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.162" />

    <Button
        android:id="@+id/seeAllCountries"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="see all countries"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.333" />

    <Button
        android:id="@+id/wantToVisit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Want to visit countries"
        app:layout_constraintEnd_toEndOf="@+id/seeAllCountries"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/seeAllCountries"
        app:layout_constraintTop_toBottomOf="@+id/seeAllCountries" />

    <Button
        android:id="@+id/alreadyVisit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="already visited"
        app:layout_constraintEnd_toEndOf="@+id/wantToVisit"
        app:layout_constraintStart_toStartOf="@+id/wantToVisit"
        app:layout_constraintTop_toBottomOf="@+id/wantToVisit" />

    <Button
        android:id="@+id/about"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="about"
        app:layout_constraintEnd_toEndOf="@+id/alreadyVisited"
        app:layout_constraintStart_toStartOf="@+id/alreadyVisit"
        app:layout_constraintTop_toBottomOf="@+id/alreadyVisit" />
</androidx.constraintlayout.widget.ConstraintLayout>